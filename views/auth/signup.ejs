<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/add-product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message error-message"><%= errorMessage %></div>
        <% } %>
        <form action="/signup" method="post" class="product-form">
            <label for="email">E-mail</label>
            <input 
                type="email" 
                name="email" 
                class="product-input <%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                placeholder="youremail@example.com" 
                value="<%= oldInput.email %>">
            <label for="password">Password</label>
            <input 
                type="password" 
                class="product-input <%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>" 
                name="password" 
                id="password" 
                value="<%= oldInput.password %>">
            <label for="password">Confirm Password</label>
            <input 
                type="password" 
                class="product-input <%= validationErrors.find(e => e.path === 'cpassword') ? 'invalid' : '' %>" 
                name="cpassword" 
                id="cpassword" 
                value="<%= oldInput.cpassword %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="product-button">Sign Up</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>